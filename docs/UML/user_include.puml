@startuml UserInclude
title mexOS Microkernel: Userland & Kernel Headers

skinparam linetype ortho
skinparam package {
    BackgroundColor<<Include>> LightGray
    BackgroundColor<<User>> LightOrange
    BorderColor Black
    Shadowing false
}

' ============================
' INCLUDE (kernel headers)
' ============================
package "Include" <<Include>> {
    [config.h]
    [string.h]
    [types.h]
}

' ============================
' USERSPACE
' ============================
package "User Space" <<User>> {
    package "init" {
        [init.c]
        [init.h]
    }

    package "lib" {
        [crt0.s]
        [syscall.h]
    }

    [user.ld]
}

' Dependencies
[init.c] --> [syscall.h]
[User Space] --> [kernel.h]
[Include] --> [Core]

' Legend
legend right
| Color | Layer |
| LightGray | Kernel Headers |
| LightOrange | User Space |
endlegend

@enduml
